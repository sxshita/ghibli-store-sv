<!doctype html>
<html lang="en">
  <body>
    <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid d-flex justify-content-between">
            <div class="navbar-brand" href="#">
                <img src="../clipart981146.png" alt="" width="85" height="85">
                Studio Ghibli Store
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="nav navbar-right">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <a class="nav-link color-pink" href="/">
                            <a role="button" class="btn btn-outline-primary custom-btn" href="/" style="margin-top: 10px;">Volver al inicio </a>
                        </a>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="card" style="margin-top: 80px !important;">
                    <div class="card-title">
                        <h2 style="text-align: center; margin-top: 15px;">Ingrese Producto</h2>
                    </div>
                    <div class="card-body">
                        <div id="form" class="col" style="width: 100%;">
                            <form onsubmit="return enviarProducto()">
                                <div class="container-sm">
                                <div class="mb-3">
                                    <label for="title" class="form-label">Titulo del producto:</label>
                                    <input type="text" class="form-control" id="title" placeholder="Ej. Lapicera" required>
                                </div>
                                <div class="mb-3">
                                    <label for="price" class="form-label">Precio:</label>
                                    <input type="number" class="form-control" id="price" placeholder="Ej. 200" required></input>
                                </div>
                                <div class="mb-3">
                                    <label for="thumbnail" class="form-label">Url de imagen:</label>
                                    <input type="text" class="form-control" id="thumbnail" placeholder="Ej. https://http2.mlstatic.com/D_NQ_NP_876006-MLA32697887039_102019-O.jpg" required></input>
                                </div>
                                <div class="mb-3">
                                    <button type="submit" class="btn btn-primary">Confirmar</button>
                                </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card" style="margin-top: 80px !important;">
                    <div class="card-title">
                        <h2 style="text-align: center;margin-top: 15px;">Tabla Productos</h2>
                    </div>
                    <div class="card-body overflow-auto" style="width: 600px; height: 600px">
                        <div id="table" class="col" style="width: 100%;">
                            {{#if prods}}
                            <table class="table table-striped table-bordered table-hover" style="width: 40%; margin: auto; text-align: center;">
                            <thead class="thead-dark">
                                <tr>
                                <th scope="col">Producto</th>
                                <th scope="col">Precio</th>
                                <th scope="col">Imagen</th>
                                </tr>
                            </thead>
                            <tbody id="productsTable">
                                {{#each prods}}
                                <tr>
                                <td>{{this.title}}</td>
                                <td>{{this.price}}</td>
                                <td><img style="width: 50px; height:50px" src={{this.thumbnail}} alt={{this.title}}></td>
                                </tr>
                                {{/each}}
                            </tbody>
                            </table>
                            {{else}}
                            <h1 style="text-align: center;">No hay productos</h1>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div> 
        </div>  
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
  <script type="module" src="../../main.js"></script>
</html>